@using WebApplication.Models;
@model  DocumentCreateModel

@{
    ViewBag.Title = "CreateDocument";
}

<h2>Add Document</h2>
@using (Html.BeginForm("CreateDocument", "Document", FormMethod.Post,
    new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" })) 
   
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true)

        <input name="file" class="form-control" type="file" title="Добавить" data-filename-placement="inside" />
        <div class="form-group" >
            <div class="col-md-3">
                @Html.Label("Доступно всем?")

                @Html.CheckBoxFor(model => model.Access)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

